                                <p style="color:#FFFFFF">
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        @*<li class="nav-header" style="background-color:#FF0012"></li>*@
                        <li class="@(ViewBag.Active == "MasterData" ? "nav-item menu-open active":"")">
                            <a asp-action="Index" is-active-route asp-controller="Dashboard" asp-area="MasterData" class="nav-link">
                                <i class="nav-icon fas fa-table" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Master Data
                                </p>
                            </a>
                        </li>
                        <li class="@(ViewBag.Active == "PurchaseRequest" ? "nav-item menu-open active":"")">
                            <a asp-action="Index" is-active-route asp-controller="PurchaseRequest" asp-area="Order" class="nav-link">
                                <i class="nav-icon fas fa-cart-plus" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Purchase Request <span class="float-right badge bg-info">@ViewBag.CountPurchaseRequestStatus</span>
                                </p>
                            </a>
                        </li>
                        <li class="@(ViewBag.Active == "PurchaseOrder" ? "nav-item menu-open active":"")">
                            <a asp-action="Index" is-active-route asp-controller="PurchaseOrder" asp-area="Order" class="nav-link">
                                <i class="nav-icon fas fa-shopping-bag" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Purchase Order @*<span class="float-right badge bg-info">@ViewBag.CountPurchaseRequestStatus</span>*@
                                </p>
                            </a>
                        </li>
                        <li class="@(ViewBag.Active == "UnitRequest" ? "nav-item menu-open active":"")">
                            <a asp-action="Index" is-active-route asp-controller="UnitRequest" asp-area="Transaction" class="nav-link">
                                <i class="nav-icon fas fa-first-aid" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Unit Request
                                </p>
                            </a>
                        </li>                        
                        <li class="@(ViewBag.Active == "Warehouse" ? "nav-item menu-open active":"")">
                            <a asp-action="Index" is-active-route asp-controller="Dashboard" asp-area="Warehouse" class="nav-link">
                                <i class="nav-icon fas fa-box-open" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Warehouse Management
                                </p>
                            </a>
                        </li>
                        <li class="@(ViewBag.Active == "Report" ? "nav-item menu-open active":"")">
                            <a asp-action="Index" is-active-route asp-controller="Dashboard" asp-area="Report" class="nav-link">
                                <i class="nav-icon fas fa-file-alt" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Report
                                </p>
                            </a>
                        </li>
                        @*<li class="nav-item">
                            <a asp-action="Index" is-active-route asp-controller="Home" class="nav-link">
                                <i class="nav-icon fas fa-receipt" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Surat Jalan
                                </p>
                            </a>
                        </li>                        
                        <li class="nav-item">
                            <a asp-action="Index" is-active-route asp-controller="Home" class="nav-link">
                                <i class="nav-icon fas fa-truck-moving" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Pengiriman Barang
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" is-active-route asp-controller="Home" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Invoice
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" is-active-route asp-controller="Home" class="nav-link">
                                <i class="nav-icon fas fa-cash-register" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Pembayaran
                                </p>
                            </a>
                        </li>                        
                        <li class="nav-item">
                            <a asp-action="Index" is-active-route asp-controller="Home" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice" style="color:#FFFFFF"></i>
                                <p style="color:#FFFFFF">
                                    Laporan
                                </p>
                            </a>
                        </li>*@
